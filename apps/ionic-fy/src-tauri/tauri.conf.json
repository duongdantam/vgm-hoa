{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../www",
    "distDir": "../www",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "FuyinTV",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "sidecar": true,
        "scope": [{ "name": "binaries/stream", "sidecar": true }]
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/stream"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "tv.vgm.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "localhost",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["resources/*"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.comodoca.com"
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://s3.hjm.bid/fuyin/updater.json",
        "https://cdn.hjm.bid/ipns/fuyin-updater.hjm.bid",
        "https://cloudflare-ipfs.hjm.bid/ipns/fuyin-updater.hjm.bid",
        "https://ipfs.io/ipns/fuyin-updater.hjm.bid",
        "https://fuyin-updater.hjm.bid",
        "https://n8n.hjm.bid/webhook/fuyin-updater"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFCMzRBNDhEREVDMDNFNTUKUldSVlBzRGVqYVEwcTNHMWkyeW9wOExKc0dmc1lkbGRWc3NhbFBYd1BJRllPK2cyOThzNjdhNTQK"
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1200,
        "height": 900,
        "resizable": true,
        "title": "福音靈糧",
        "visible": false
      },
      {
        "label": "splashscreen",
        "decorations": false,
        "resizable": false,
        "width": 800,
        "height": 600,
        "url": "splashscreen.html"
      }
    ]
  }
}
